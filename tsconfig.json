{
  "include": ["src"],
  "exclude": ["src/__test__/**/*", "**/*.test.*"],

  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "sourceRoot": "src"
  }
}
